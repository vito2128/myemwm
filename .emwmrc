! Default menu and keybinding configuration for EMWM.
! Copy this file to ~/.emwmrc for customization.

! Root Menu
Menu DefaultRootMenu
{
	"Start"		        f.title
	"Xterm"			f.exec "uxterm -fa PxPlusToshibaSat9x16 -fs 14 -tn xterm-256color &"
        "Thunar"		f.exec "thunar &"
	"Wifi"			f.exec "uxterm -e nmtui &"
	"GTK set"		f.exec "nwg-look &"
        "Firefox"		f.exec "firefox &"
	"Volume"		f.exec "pavucontrol &"
	"App Finder"		f.exec "xfce4-appfinder &"
	"Riavvia Emwm"	        f.restart
	"Esci"               	f.exec "killall emwm &"
	"Spegni"		f.exec "poweroff"
}

! Window menu
Menu DefaultWindowMenu
{
	Ripristina		_R	Alt<Key>F5	f.restore
	Muovi		_M	Alt<Key>F7	f.move
	Ridimensiona		_S	Alt<Key>F8	f.resize
	Minimizza	_n	Alt<Key>F9	f.minimize
	Massimizza	_x	Alt<Key>F10	f.maximize
	Secondo-piano		_L Alt<Key>F3	f.lower
	no-label				f.separator
	"Occupy Workspace..."	_O	Alt<Key>F2 f.workspace_presence
	"Occupy All Workspaces"	_A	f.occupy_all
	"Unoccupy Workspace"	_U	f.remove
	no-label				f.separator	
	Chiudi		_C	Alt<Key>F4	f.kill
}


! Key Bindings
Keys DefaultKeyBindings
{
	Shift<Key>Escape window|icon	f.post_wmenu
	Alt<Key>space window|icon		f.post_wmenu
	Alt<Key>Tab	root|icon|window	f.next_key
	Alt Shift<Key>Tab root|icon|window	f.prev_key
	Alt<Key>Escape root|icon|window	f.circle_down
	Alt Shift<Key>Escape root|icon|window	f.circle_up
	Alt<Key>F6 window f.next_key transient
	Alt Shift<Key>F6 window f.prev_key transient
	Shift<Key>F10 icon f.post_wmenu
!	Alt Shift<Key>Delete root|icon|window f.restart
}

! Mouse Button Bindins
Buttons DefaultButtonBindings
{
	<Btn1Down>	icon|frame	f.raise
	<Btn3Down>	icon|frame	f.post_wmenu
	<Btn3Down>	root		f.menu	DefaultRootMenu
}
 
Buttons ExplicitButtonBindings
{
	<Btn1Down>	frame|icon	f.raise
	<Btn3Down>	frame|icon	f.post_wmenu
	<Btn3Down>	root		f.menu	DefaultRootMenu
	Alt<Btn1Down>	window|icon	f.lower
}
 
Buttons PointerButtonBindings
{
	<Btn1Down>	frame|icon	f.raise
	<Btn3Down>	frame|icon	f.post_wmenu
	<Btn3Down>	root		f.menu	DefaultRootMenu
	<Btn1Down>	window		f.raise
	Alt<Btn1Down>	window|icon	f.lower
}
